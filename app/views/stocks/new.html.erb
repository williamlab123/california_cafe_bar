<!-- app/views/stocks/new.html.erb -->
<div class="container">
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>
      <ul>
        <% @stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= link_to 'Voltar para o inicio', root_path, class: 'btn btn-secondary' %>

  <%= form_for @stock, url: stocks_path, class: 'stock-form' do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :amount %>
      <%= f.number_field :amount, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, step: 0.01, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :barcode %>
      <%= f.number_field :barcode, class: 'form-control', maxlength: 13 %>
    </div>

    <div class="form-group">
      <%= f.submit "Cadastrar produto", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const form = document.querySelector('.stock-form');
    form.addEventListener('submit', function(e) {
      const barcode = document.querySelector('input[name="stock[barcode]"]').value;
      if (barcode.length !== 13) {
        alert('The barcode must be 13 characters long.');
        e.preventDefault();
      }
    });
  });
</script>

