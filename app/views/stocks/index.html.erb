<!-- app/views/stocks/index.html.erb -->
<h1>All Stock Items</h1>
<%= link_to 'Add Item', new_stock_path, class: 'button' %>
  <%= link_to 'Back to Index', root_path %>


<% @stocks.each do |stock| %>
  <div>
    <h2><%= stock.name %></h2>
    <p>Amount: <%= stock.amount %></p>
    <p>Price: <%= stock.price %></p>
    <p>Barcode: <%= stock.barcode %></p>
    <td><%= stock.created_at.in_time_zone('Brasilia').strftime('%d/%m/%Y - %H:%M:%S') %></td>  </tr>
    
    <%= form_with url: stock_path(stock), method: :post do %>
      <%= hidden_field_tag :_method, :delete %>
      <%= submit_tag 'Delete' %>
    <% end %>
    <%= link_to 'Edit', edit_stock_path(stock), class: 'button' %>
  </div>
<% end %>
