<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>

<div class="login-container">
  <%= form_with(url: login_path, local: true, class: 'login-form') do |form| %>
    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, name: 'session[username]', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, name: 'session[password]', class: 'form-control' %>
    </div>
    <%= form.submit "Login", class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Criar novo usuÃ¡rio', new_user_path, class: 'btn btn-secondary' %>
</div>

