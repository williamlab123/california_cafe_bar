<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>

<%= form_with(url: login_path, local: true) do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username, name: 'session[username]' %>
  <%= form.label :password %>
  <%= form.password_field :password, name: 'session[password]' %>
  <%= form.submit "Login" %>
<% end %>

<%= link_to 'Create New User', new_user_path %>